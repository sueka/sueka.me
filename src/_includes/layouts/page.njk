{% set language = language or site.language -%}

{% if title -%}
  {% set titleText = title | md | safe | striptags -%}
{% endif -%}

{% if not title -%}
  {% set incipit = content | safe | getIncipit -%}
{% endif -%}

{# TODO: Remove `and not useKaTeX` -#}
{% set verticalOk = (vertical or vertical == null) and not useKaTeX -%}

{% set prefersVertical = verticalOk and (writing == 'vertical' or writing == null and language === 'ja') -%}

<!DOCTYPE html>
<html
  {%- if language %} lang={{ language }} {%- endif -%}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>
      {{- titleText or incipit }}
      {%- if titleText != site.name and incipit != site.name %} - {{ site.name }} {%- endif -%}
    </title>
    <link href="{{ '~/assets/stylesheets/main.css' | url }}" rel="stylesheet" />
    <link href="{{ '~/assets/stylesheets/dark.css' | url }}" rel="stylesheet" media="(prefers-color-scheme: dark)" />

    {%- if prefersVertical %}
    <link href="{{ '~/assets/stylesheets/horizontal.css' | url }}" rel="stylesheet" />
    {#- Keep using physical, not logical #}
    {#- ⌈(27 / 39) * (2 * 4.236068 + 39) * 13⌉; 2 * 8.923272/100 MinHeight(rem) + 27 rem ≤ MinHeight(rem) #}
    <link href="{{ '~/assets/stylesheets/vertical.css' | url }}" rel="stylesheet" media="(min-height: 428px)" class="linkToVerticalCss" />
    {%- else %} {#- Prefers horizontal #}
    {# <link href="{{ '~/assets/stylesheets/vertical.css' | url }}" rel="stylesheet" /> #}
    <link href="{{ '~/assets/stylesheets/horizontal.css' | url }}" rel="stylesheet" />
    {%- endif %}

    {%- if verticalOk %}
    <link href="{{ '~/assets/stylesheets/horizontal.css' | url }}" rel="stylesheet alternate" title="Horizontal Writing" />
    <link href="{{ '~/assets/stylesheets/vertical.css' | url }}" rel="stylesheet alternate" title="Vertical Writing" />
    {%- endif %}

    {#- NOTE: Script is loaded in _config.js #}
    <link href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.6.0/build/styles/gradient-light.min.css" rel="stylesheet" media="(prefers-color-scheme: light)" />
    <link href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.6.0/build/styles/gradient-dark.min.css" rel="stylesheet" media="(prefers-color-scheme: dark)" />

    {%- if prefersVertical %}
    <link href="{{ '~/assets/stylesheets/highlight.js/vertical-gradient-light.css' | url }}" rel="stylesheet" media="(min-height: 428px)" class="linkToVerticalCss" />
    <link href="{{ '~/assets/stylesheets/highlight.js/vertical-gradient-dark.css' | url }}" rel="stylesheet" media="(min-height: 428px) and (prefers-color-scheme: dark)" class="linkToVerticalCss" />
    {%- endif %}

    {%- if verticalOk %}
    <link href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.6.0/build/styles/gradient-light.min.css" rel="stylesheet alternate" media="(prefers-color-scheme: light)" title="Horizontal Writing" />
    <link href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.6.0/build/styles/gradient-dark.min.css" rel="stylesheet alternate" media="(prefers-color-scheme: dark)" title="Horizontal Writing" />
    <link href="{{ '~/assets/stylesheets/highlight.js/vertical-gradient-light.css' | url }}" rel="stylesheet alternate" title="Vertical Writing" />
    <link href="{{ '~/assets/stylesheets/highlight.js/vertical-gradient-dark.css' | url }}" rel="stylesheet alternate" media="(prefers-color-scheme: dark)" title="Vertical Writing" />
    {%- endif %}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.2.1/css/all.min.css" integrity="sha256-Z1K5uhUaJXA7Ll0XrZ/0JhX4lAtZFpT6jkKrEDT0drU=" crossorigin="anonymous">

    {#- Don't use lume/plugins/katex.ts now #}
    {%- if useKaTeX %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.2/dist/katex.min.css" integrity="sha384-bYdxxUwYipFNohQlHt0bjN/LCpueqWz13HufFEV1SUatKs1cm4L6fFgCi1jT643X" crossorigin="anonymous" />
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.2/dist/katex.min.js" integrity="sha384-Qsn9KnoKISj6dI8g7p1HBlNpVx0I8p1SvlwOldgi3IorMle61nQy4zEahWYtljaz" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.2/dist/contrib/auto-render.min.js" integrity="sha384-+VBxd3r6XgURycqtZ117nYw44OOcIax56Z4dCRWbxyPt0Koah1uHoK0o4+/RRE05" crossorigin="anonymous" onload="renderMathInElement(document.body, { throwOnError: true })"></script>
    <script src="https://cdn.jsdelivr.net/npm/katex@0.16.2/dist/contrib/copy-tex.min.js" integrity="sha384-ww/583aHhxWkz5DEVn6OKtNiIaLi2iBRNZXfJRiY1Ai7tnJ9UXpEsyvOITVpTl4A" crossorigin="anonymous"></script>
    {%- endif %}

    <link href="{{ '~/feed.atom.njk' | url }}" rel="alternate" type="application/atom+xml" title="{{ site.name }}" />
    <script defer src="https://unpkg.com/css-has-pseudo@1.0.0/browser"></script>
    <script defer src="{{ '~/assets/scripts/run-css-has-pseudo.js.njk' | url }}"></script>
    <script src="{{ '~/assets/scripts/main.js.njk' | url }}"></script>

    {%- if he %}
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif+Hebrew|Noto+Sans+Hebrew" rel="stylesheet" />
    {%- endif %}
  </head>
  <body>
    <div class="book">
      <main class="main">
        {% include 'templates/title-page.njk' %}
        <div class="body">
          {{ content | safe }}
        </div>
      </main>
      {% include 'templates/colophon.njk' %}
    </div>
    {% include 'templates/footer.njk' %}
    <script type="module">
      import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@9.3.0/dist/mermaid.esm.min.mjs'
      mermaid.initialize({
        startOnLoad: true,
        flowchart: {
          useMaxWidth: false,
        },
      })
    </script>
  </body>
</html>
