{% set language = language or site.language %}

{% if not title %}
  {% set incipit = content | safe | getIncipit %}
{% endif %}

<!DOCTYPE html>
<html
  {%- if language %} lang={{ language }} {%- endif -%}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{{ title or incipit }} {%- if title !== site.name %} - {{ site.name }} {%- endif %}</title>
    <link href="{{ '~/main.css' | url }}" rel="stylesheet" />
    <link href="{{ '~/horizontal.css' | url }}" rel="stylesheet" />

    {%- if vertical or vertical == null and language === 'ja' %}
    {#- Use physical, not logical #}
    {#- MinHeight(rem) = ⌈2 φ³ rem + 20 rem⌉ #}
    <link href="{{ '~/vertical.css' | url }}" rel="stylesheet" media="(min-height: 456px)" />
    {%- endif %}

    {#- NOTE: Script is loaded in _config.js #}
    <link href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.2.0/build/styles/gradient-light.min.css" rel="stylesheet" />

    <link href="{{ '~/feed.xml.njk' | url }}" rel="alternate" type="application/atom+xml" title="{{ site.name }}" />
    <script src="https://unpkg.com/css-has-pseudo/browser"></script>
    <script>
      cssHasPseudo(document)
    </script>
  </head>
  <body>
    <main class="main">
      {% if title -%} {% include 'templates/title-page.njk' %} {%- endif %}
      <div class="body">
        {{ content | safe }}
      </div>
    </main>
    {% include 'templates/footer.njk' %}
  </body>
</html>
